.rowstyle {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  background-color: white;
  /* margin: 10rpx; *//* border: 2rpx solid #000; */
}

.columnstyle {
  display: flex;
  flex-direction: column;
  margin: 20rpx;
}

/* 更多图片 */

.detailsstyle {
  display: flex;
  align-items: center;
  align-content: center;
}

.detailsimg {
  width: 50rpx;
  height: 50rpx;
}

/* 分割线 */

.line {
  height: 20rpx;
  background: #f1f1f1;
}

/* 推荐图片 */

.mypurchaseimage {
  margin: 20rpx;
  width: 200rpx;
  height: 150rpx;
  border-radius: 30rpx 0rpx 30rpx 30rpx;
}

