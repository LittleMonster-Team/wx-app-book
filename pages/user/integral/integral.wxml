    <text class="integralBodyText1">7天签到领积分</text>
    <view class="integralBody2">
      <view class="integralBody3">
        <image class="integralBodyImg" src="/image/user/jifen.png" />
        <text class="integralBodyText2">已领</text>
      </view>
      <view class="integralBody3">
        <image class="integralBodyImg" src="/image/user/jifen2.png" />
        <text class="integralBodyText2">明日</text>
      </view>
      <view class="integralBody3">
        <image class="integralBodyImg" src="/image/user/jifen2.png" />
        <text class="integralBodyText2">3天</text>
      </view>
      <view class="integralBody3">
        <image class="integralBodyImg" src="/image/user/jifen2.png" />
        <text class="integralBodyText2">4天</text>
