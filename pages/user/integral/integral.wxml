      </view>
      <text class="integralFootBtn">去完成</text>
    </view>
    <view class="line"></view>
    <view class="integralFoot2">
      <view class="integralFoot3">
        <text class="integralFootText2">收听十分钟</text>
        <text class="integralFootText3">收听任务</text>
        <text class="integralFootText4">+4积分</text>

      </view>
      <text class="integralFootBtn">去完成</text>
    </view>
    <view class="line"></view>
    <view class="integralFoot2">
      <view class="integralFoot3">
        <text class="integralFootText2">收听30分钟</text>
