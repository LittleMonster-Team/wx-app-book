      <view class="integralBody3">
        <image class="integralBodyImg" src="/image/user/jifen2.png" />
        <text class="integralBodyText2">5天</text>
      </view>
      <view class="integralBody3">
        <image class="integralBodyImg" src="/image/user/jifen2.png" />
        <text class="integralBodyText2">6天</text>
      </view>
      <view class="integralBody3">
        <image class="integralBodyImg" src="/image/user/jifen3.png" />
        <text class="integralBodyText2">7天</text>
      </view>
    </view>
  </view>

  <view>
    <view class="integralFoot1">
      <image src="/image/user/exchange.png" class="integralFootImg" />
      <text class="integralFootText1">日常任务</text>
    </view>
    <view class="integralFoot2">
      <view class="integralFoot3">
        <text class="integralFootText2">分享一条声音</text>
        <text class="integralFootText3">点的人越多，赚的越多</text>
