.section1 {
  background: #fff;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  padding-left: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 35rpx;
