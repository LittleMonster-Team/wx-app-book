.section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 35rpx;
  /* position: relative; */
}

.sectiontext {
  margin-left: 20rpx;
}

.tl {
  position: absolute;
  left: 90%;
  color: #aaa;
  width: 35rpx;
  height: 35rpx;
}

.uimgstyle {
  position: absolute;
  left: 75%;
  color: #aaa;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.uInformationStyle1 {
  position: absolute;
  right: 100rpx;
  /* width: 350rpx; */
  font-size: 25rpx;
  color: #999;
}
.uInformationStyle2 {
  position: absolute;
  right: 100rpx;
  width: 350rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 25rpx;
  color: #999;
}

.genderStyle {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.genderStyle2 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 遮罩层 */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.5;
}

/* 弹出层 */

.modalDlg {
  width: 70%;
  height: 350rpx;
  position: fixed;
  top: 150rpx;
  left: 0;
  right: 0;
  z-index: 9999;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 30px;
}

/* 弹出层里面的图片 */

.unamestyle {
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 30rpx;
}

.unamestyle image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 20px;
}

.genderText {
  font-size: 30rpx;
}

/* 弹出层里面的按钮 */

.ok {
  width: 160rpx;
  height: 70rpx;
  background: #44b549;
  line-height: 70rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  margin: 40rpx auto;
  border-radius: 50rpx;
}

