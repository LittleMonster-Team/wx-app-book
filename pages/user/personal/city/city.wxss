/**index.wxss**/

.title {
    position: relative;
    padding: 20rpx 0;
}
.title_list {
    display: inline-block;
    padding: 0 30rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 32rpx;
}
.title button {
    width: 100rpx;
    height: 60rpx;
    font-size: 32rpx;
    padding: 0;
    line-height: 60rpx;
    margin: auto;
    position: absolute;
    top: 0;
    bottom:0;
    right: 20rpx;
    background: none;
}
.title button::after {
    border: none;
}
.title_list:nth-child(1) {
    border-right:2rpx #ccc solid;
}
/*城市列表*/
.city_list {
    position: relative;
}

/*城市选择头部*/
.list_tit {
    display: block;
    line-height: 80rpx;
    height: 80rpx;
    padding-left: 30rpx;
    font-size: 32rpx;
    background: #f5f5f5;
    color: #666;
}
.list_con {
    height: 80rpx;
    /*border-top: 1px #f5f5f5 solid ;*/
    line-height: 80rpx;
    font-size: 32rpx;
    padding-left: 30rpx;
}
.list_con::before {
    content: " ";
    height: 2rpx;
    border-top: 2rpx #f5f5f5 solid;
    position: absolute;
    width: 100%;
}
.list_con::before:nth-child(1) {
    border: none;
}
/*城市选择 右边*/
.scroll_list {
    background: rgba(0,0,0,0);
    position: absolute;
    height: calc(100% - 100px);
    width: 50rpx;
    top: 180rpx;
    right: 20rpx;
}
.scroll_list_chi {
    /*border: 1px blue solid;*/
    text-align: center;
    font-size: 24rpx;
}
/*显示框*/

.showwords {
    width: 160rpx;
    height: 160rpx;
    background: rgba(0,0,0,.3);
    border-radius:50%;
    line-height: 160rpx;
    text-align: center;
    font-size:10vw;
    margin: auto;
    position: absolute;
    top: 0;left: 0;bottom: 0;right: 0;
    z-index: 999;   
}