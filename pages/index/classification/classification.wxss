page {
  background-color: #f1f1f1;
  background-repeat: no-repeat;
  /* background-size: 100% 100%; *//* height: 100%; */
}

.rowstyle {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.storyimg {
  margin-right: 10rpx;
  margin-left: 20rpx;
  width: 35rpx;
  height: 35rpx;
}

.storytext {
  font-size: 35rpx;
}

.sign {
  font-size: 30rpx;
}

.classification {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  background-color: white;
}

.sort{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 65rpx;
  font-size: 30rpx;
  background-color: #f1f1f1;
  margin: 20rpx;
  /* border: 2rpx solid red; */
  border-radius: 30rpx 0rpx 30rpx 30rpx;
}

.columnstyle {
  display: flex;
  flex-direction: column;
  margin: 20rpx;
}

/* 分割线 */

.line {
  height: 2rpx;
  background: #ccc;
}

/* 榜单书名 */

.rankingtitle {
  margin-top: 10rpx;
  margin-left: 20rpx;
  font-weight: bold;
}

/*榜单章节*/

.rankingchapter {
  margin-left: 20rpx;
  margin-top: 30rpx;
}
