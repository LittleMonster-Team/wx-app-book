/* pages/user-details/user-details.wxss */

.basic {
  display: flex;
  flex-direction: row;
  margin: 40rpx;
}

.basicImg {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.basicTitle {
  margin-left: 25rpx;
  margin-top: 15rpx;
  display: flex;
  width: 420rpx;
  flex-direction: column;
}

.basicName {
  font-size: 30rpx;
}

.basicContent {
  font-size: 25rpx;
  color: #967409;
  margin: 5rpx;
  width: 380rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.basicFollow {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  width: 150rpx;
  height: 50rpx;
  background-color: #fed12d; /* border: 2rpx solid red; */
  border-radius: 30rpx 0rpx 30rpx 30rpx;
}
.basicFollow2 {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  width: 150rpx;
  height: 50rpx;
  background-color: #ccc;
  border-radius: 30rpx 0rpx 30rpx 30rpx;
}

.subscribe {
  display: flex;
  flex-direction: row;
  margin: 40rpx;
  justify-content: space-around;
}

.subscribe2 {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.subscribeNum {
  font-size: 30rpx;
  margin-bottom: 8rpx;
}

.subscribeContent {
  font-size: 30rpx;
  color: #967409;
}

.videoTitle {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx;
}

.videoImg {
  width: 40rpx;
  height: 40rpx;
}

.videoContent {
  font-size: 35rpx;
  margin-left: 20rpx;
}

.rowstyle {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  background-color: white;
  /* margin: 10rpx; *//* border: 2rpx solid #000; */
}

.columnstyle {
  display: flex;
  flex-direction: column;
  margin: 20rpx;
}

/* 分割线 */

.line {
  height: 20rpx;
  background: #f1f1f1;
}

/* 推荐图片 */

.recommendedimage {
  margin: 20rpx;
  width: 200rpx;
  height: 150rpx;
  border-radius: 30rpx 0rpx 30rpx 30rpx;
}

/* 推荐书名 */

.recommendedtitle {
  font-size: 30rpx;
  margin: 10rpx;
  font-weight: 300;
}

/*推荐章节*/

.recommendedchapter {
  font-size: 20rpx;
  color: #999;
  margin: 10rpx;
  margin-right: 20rpx;
}
