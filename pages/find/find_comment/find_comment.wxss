/* pages/find/find.wxss */

page {
  background-color: #fff;
  background-repeat: no-repeat;
  /* background-size: 100% 100%; *//* height: 100%; */
}

.search {
  display: flex;
  flex-direction: row;
  align-items: center;
  /* border: 2rpx solid #000; */
  margin-top: 40rpx;
}

.inputStyle2 {
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 580rpx;
  height: 60rpx;
  border-radius: 50rpx 0rpx 50rpx 50rpx;
  border: 2rpx solid #eee;
  margin-top: 10rpx;
}

.inputStyle {
  width: 80%;
   height: 60rpx;
  font-size: 25rpx;
  /* border: 2rpx solid #eee; */
}
.placeholderStyle {
  font-size: 25rpx;
}
.userinfo-avatar1 {
  width: 65rpx;
  height: 65rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
  background-color: #aaa;
  border-radius: 50%;
}

.userinfo-avatar2 {
  width: 65rpx;
  height: 65rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.rowstyle {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 40rpx;
}

.iconStyle {
  margin-right: 20rpx;
}

.findContent {
  display: flex;
  flex-direction: column;
  margin: 40rpx;
}

.findVideo {
  width: 100%;
  height: 350rpx;
  border-radius: 50rpx 0rpx 50rpx 50rpx;
}

.findTitle {
  font-size: 30rpx;
  margin: 20rpx;
}

.line1 {
  border: 10rpx solid #eee;
}

.findWhole {
  display: flex;
  flex-direction: column;
  margin: 20rpx;
}

.findHead {
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
}

.findHeadWhole {
  font-size: 40rpx;
}

.findHeadComment {
  position: absolute;
  right: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 50rpx;
  font-size: 30rpx;
  border: 2rpx solid #a27800;
  color: #a27800;
  border-radius: 30rpx 0rpx 30rpx 30rpx;
}

.findBody {
  display: flex;
  flex-direction: column;
}

.findUser {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx;
}

.findUserImg {
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
}

.findUserName {
  font-size: 35rpx;
}

.findUsercontent {
  font-size: 30rpx;
  margin-left: 25rpx;
  margin-bottom: 15rpx;
}

.findFoot {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 25rpx;
}

.findFootTime {
  font-size: 30rpx;
  color: #999;
}

.findFootImg {
  position: absolute;
  right: 50rpx;
}

.findFootImg image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.line2{
  border: 2rpx solid #eee;
  margin-top:10rpx; 
  margin-bottom: 10rpx; 
}